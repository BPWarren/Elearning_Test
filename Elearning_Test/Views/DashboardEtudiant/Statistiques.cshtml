@{
}
@model StatistiquesEtudiantViewModel

@{
    ViewData["Title"] = "Mes statistiques";
    Layout = "~/Views/Shared/_EtudDashboardLayout.cshtml";
}

<h1>Mes statistiques</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.NombreCoursInscrits</h5>
                <p class="card-text">Cours inscrits</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.NombreCoursTermines</h5>
                <p class="card-text">Cours terminés</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">@Model.ProgressionMoyenne%</h5>
                <p class="card-text">Progression moyenne</p>
            </div>
        </div>
    </div>
</div>