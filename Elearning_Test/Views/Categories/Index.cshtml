@model IEnumerable<Categorie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@item.ImageFile" class="card-img-top" alt="Image de @item.Intitule" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Intitule)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <small class="text-muted">Créé le : @Html.DisplayFor(modelItem => item.CreatedAt)</small><br>
                    <small class="text-muted">Mis à jour le : @Html.DisplayFor(modelItem => item.UpdatedAt)</small>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>