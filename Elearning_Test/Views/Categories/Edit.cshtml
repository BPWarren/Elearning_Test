@model Categorie

@{
    ViewData["Title"] = "Modifier la catégorie";
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

<div class="container">
    <h1 class="display-4 mb-4">Modifier la catégorie</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" enctype="multipart/form-data" method="post" class="card shadow-sm p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Champ Intitulé -->
                <div class="form-group mb-3">
                    <label asp-for="Intitule" class="control-label font-weight-bold">Intitulé</label>
                    <input asp-for="Intitule" class="form-control" placeholder="Entrez l'intitulé de la catégorie" />
                    <span asp-validation-for="Intitule" class="text-danger"></span>
                </div>

                <!-- Champ Description -->
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label font-weight-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Entrez la description de la catégorie"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Champ Image -->
                <div class="form-group mb-3">
                    <label class="control-label font-weight-bold">Image</label>
                    @if (!string.IsNullOrEmpty(Model.ImageFile))
                    {
                        <div class="mb-3">
                            <img src="@Model.ImageFile" alt="Image actuelle" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }
                    <div class="custom-file">
                        <input type="file" name="newImage" class="custom-file-input" id="customFile" />
                        <label class="custom-file-label" for="customFile">Choisir une nouvelle image</label>
                    </div>
                </div>

                <!-- Boutons -->
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
