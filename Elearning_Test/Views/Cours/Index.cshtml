@model IEnumerable<Cours>

@{
    ViewData["Title"] = "Liste des cours";
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

<div class="container">
    <h1 class="my-4">Liste des cours</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Créer un nouveau cours</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@item.ImageFile" class="card-img-top" alt="Image du cours" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Titre</h5>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Professeur :</strong> @item.Professeur.Nom @item.Professeur.Prenom</li>
                            <li class="list-group-item"><strong>Prix :</strong> @item.Price €</li>
                            <li class="list-group-item"><strong>Catégorie :</strong> @item.Categorie.Intitule</li>
                            <li class="list-group-item"><strong>Créé le :</strong> @item.CreatedAt.ToString("dd/MM/yyyy")</li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                        <!-- Bouton pour ajouter une leçon -->
                        <a asp-action="AddLecon" asp-route-coursId="@item.Id" class="btn btn-success btn-sm">Ajouter une leçon</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>