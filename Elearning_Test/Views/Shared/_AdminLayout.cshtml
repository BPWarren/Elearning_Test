        $(document).ready(function () {
    function updateBadge() {
    $.ajax({
    url: '@Url.Action("GetNombreDemandesCertificat", "Admin")',
    type: 'GET',
    success: function (data) {
    $('#badge-certificat').text(data); // Met à jour le texte du badge
    },
    error: function () {
    console.log("Erreur lors de la récupération du nombre de demandes.");
    }
    });
    }

    // Mettre à jour le badge toutes les 30 secondes
    setInterval(updateBadge, 30000);

    // Mettre à jour immédiatement au chargement de la page
    updateBadge();
    });

