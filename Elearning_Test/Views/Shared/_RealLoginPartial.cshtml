@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    // Récupérer l'utilisateur connecté
    var user = await UserManager.GetUserAsync(User);
    

    // Vérifier le rôle de l'utilisateur
    if (await UserManager.IsInRoleAsync(user!, "Professeur"))
    {
        <a class="nav-link text-dark" asp-controller="DashboardProf" asp-action="Index">Accéder au Dashboard</a>
    }
    else if (await UserManager.IsInRoleAsync(user!, "Etudiant"))
    {
        <a class="nav-link text-dark" asp-controller="DashboardEtudiant" asp-action="Index">Accéder au Dashboard</a>
    }
    else if (await UserManager.IsInRoleAsync(user!, "Admin"))
    {
        <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Accéder au Dashboard</a>
    }
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>

    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a href="@Url.Action("ChoseConnection", "MyHome")" class="btn btn-primary py-4 px-lg-5 d-none d-lg-block">Join Now<i class="fa fa-arrow-right ms-3"></i></a>
}