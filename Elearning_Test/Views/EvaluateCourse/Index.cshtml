@{
}

@model Elearning_Test.Models.Evaluation

@{
    ViewData["Title"] = "Évaluer le cours";
    Layout = "~/Views/Shared/_EtudDashboardLayout.cshtml";
}

<h1>Évaluer le cours : @ViewBag.CoursTitre</h1>

<form asp-action="Index" method="post">
    <input type="hidden" name="CoursId" value="@ViewBag.CoursId" />

    <div class="form-group">
        <label asp-for="Content" class="control-label">Votre évaluation :</label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Soumettre l'évaluation</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}