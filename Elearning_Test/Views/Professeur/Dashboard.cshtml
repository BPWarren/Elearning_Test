@{
}

@{
    ViewData["Title"] = "Tableau de Bord - Professeur";
}

<div class="container mt-5">
    <h1 class="text-center">Bienvenue, Professeur</h1>
    <p class="text-center">Voici votre tableau de bord.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Gérer les Cours</h5>
                    <p class="card-text">Ajoutez ou modifiez les cours.</p>
                    <a href="#" class="btn btn-light">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Consulter les Étudiants</h5>
                    <p class="card-text">Voir la liste des étudiants.</p>
                    <a href="#" class="btn btn-light">Accéder</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title">Rapports</h5>
                    <p class="card-text">Téléchargez des rapports.</p>
                    <a href="#" class="btn btn-light">Accéder</a>
                </div>
            </div>
        </div>
    </div>
</div>
