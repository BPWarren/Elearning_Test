
@model EtudiantRegistrationViewModel

@{
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <!-- En-tête de la carte -->
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0"><i class="fas fa-user-graduate me-2"></i>Inscription - Étudiant</h3>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <!-- Corps de la carte -->
                <div class="card-body p-5">
                    <form asp-action="RegisterEtudiant" method="post">
                        <!-- Champ UserName -->
                        <div class="mb-4">
                            <label for="UserName" class="form-label fw-bold">Nom d'utilisateur</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-muted"></i>
                                </span>
                                <input asp-for="UserName" class="form-control border-start-0" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <!-- Champ Nom -->
                        <div class="mb-4">
                            <label for="Nom" class="form-label fw-bold">Nom</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-muted"></i>
                                </span>
                                <input asp-for="Nom" class="form-control border-start-0" />
                            </div>
                            <span asp-validation-for="Nom" class="text-danger small"></span>
                        </div>

                        <!-- Champ Prénom -->
                        <div class="mb-4">
                            <label for="Prenom" class="form-label fw-bold">Prénom</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-user text-muted"></i>
                                </span>
                                <input asp-for="Prenom" class="form-control border-start-0" />
                            </div>
                            <span asp-validation-for="Prenom" class="text-danger small"></span>
                        </div>

                        <!-- Champ CNE -->
                        <div class="mb-4">
                            <label for="Cne" class="form-label fw-bold">CNE</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-id-card text-muted"></i>
                                </span>
                                <input asp-for="Cne" class="form-control border-start-0" />
                            </div>
                            <span asp-validation-for="Cne" class="text-danger small"></span>
                        </div>

                        <!-- Champ Email -->
                        <div class="mb-4">
                            <label for="Email" class="form-label fw-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-envelope text-muted"></i>
                                </span>
                                <input asp-for="Email" class="form-control border-start-0" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Champ Mot de Passe -->
                        <div class="mb-4">
                            <label for="MotDePasse" class="form-label fw-bold">Mot de Passe</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="MotDePasse" class="form-control border-start-0" type="password" />
                            </div>
                            <span asp-validation-for="MotDePasse" class="text-danger small"></span>
                        </div>

                        <!-- Champ Confirmation Mot de Passe -->
                        <div class="mb-4">
                            <label for="ConfirmationMotDePasse" class="form-label fw-bold">Confirmer le Mot de Passe</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-lock text-muted"></i>
                                </span>
                                <input asp-for="ConfirmationMotDePasse" class="form-control border-start-0" type="password" />
                            </div>
                            <span asp-validation-for="ConfirmationMotDePasse" class="text-danger small"></span>
                        </div>

                        <!-- Bouton d'inscription -->
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold mt-4">
                            <i class="fas fa-user-plus me-2"></i>S'inscrire
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ajouter Font Awesome pour les icônes -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">