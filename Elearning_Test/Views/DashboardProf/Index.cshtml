@{
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

@model IEnumerable<Elearning_Test.Models.Cours>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes Cours</h1>
        <a asp-action="AjouterCours" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Ajouter un nouveau cours
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cours in Model)
                {
                    <tr>
                        <td>
                            <img src="@cours.ImageFile" alt="Image du cours" class="img-thumbnail" style="max-width: 100px;" />
                        </td>
                        <td>@cours.Titre</td>
                        <td>@cours.Description</td>
                        <td>@cours.Price €</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a asp-action="VoirLecons" asp-route-id="@cours.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye me-1"></i>Voir
                                </a>
                                <a asp-action="EditCours" asp-route-id="@cours.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit me-1"></i>Modifier
                                </a>
                                <a asp-action="SupprimerCours" asp-route-id="@cours.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i>Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
