@{
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

@model Cours

<h2>Supprimer le cours</h2>

<h3>Êtes-vous sûr de vouloir supprimer ce cours?</h3>
<div>
    <h4>@Model.Titre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Titre</dt>
        <dd class="col-sm-10">@Model.Titre</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <!-- Display other properties as needed -->
    </dl>

    <form asp-action="SupprimerCours">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Annuler</a>
    </form>
</div>