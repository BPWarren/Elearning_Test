@model VoirLeconsViewModel

@{
    ViewData["Title"] = "View Lecons";
}
@{
    Layout = "~/Views/Shared/_ELayout.cshtml";
}

<h2>Lecons for Cours ID @Model.CoursId</h2>

@if (Model.Lecons!=null)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Numero De Page</th>
                <th>Date de création</th>
                <th>Date de la dernière modification</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var lecon in Model.Lecons)
            {
                <tr>
                    <td>@lecon.Titre</td>
                    <td>@lecon.NumeroPage</td>
                    <td>@lecon.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@lecon.UpdatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="ModifierLecon" asp-route-id="@lecon.Id">Modifier</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No lecons available for this cours.</p>
}
<div>
    <a asp-action="AjouterLecon" asp-route-id="@Model.CoursId">Ajouter Une nouvelle Leçon</a>
</div>