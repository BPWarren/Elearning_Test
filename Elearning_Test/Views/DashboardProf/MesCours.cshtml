@{
    Layout = "~/Views/Shared/_ELayout.cshtml";
}
@model List<Cours>

<div class="container mt-4">
    <h1>Mes Cours</h1>
    <a href="/DashboardProf/AjouterCours" class="btn btn-success mb-3">Ajouter un Cours</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cours in Model)
            {
                <tr>
                    <td><img src="@cours.ImageFile" alt="@cours.Titre" style="width: 100px;" /></td>
                    <td>@cours.Titre</td>
                    <td>@cours.Description</td>
                    <td>@cours.Price €</td>
                    <td>@cours.Categorie?.Intitule</td>
                    <td>
                        <a href="/DashboardProf/ModifierCours/@cours.Id" class="btn btn-warning">Modifier</a>
                        <a href="/DashboardProf/SupprimerCours/@cours.Id" class="btn btn-danger">Supprimer</a>
                        <a href="/DashboardProf/Lecons/@cours.Id" class="btn btn-info">Voir Leçons</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
