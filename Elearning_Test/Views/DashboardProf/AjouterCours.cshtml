@{
    Layout = "~/Views/Shared/_ProfDashboardLayout.cshtml";
}

@model Elearning_Test.Models.CoursViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title text-center mb-0">
                        <i class="fas fa-book me-2"></i>Ajouter un nouveau cours
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="AjouterCours" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
                        <!-- Champ Titre -->
                        <div class="mb-3">
                            <label for="Titre" class="form-label fw-bold">Titre</label>
                            <input asp-for="Titre" class="form-control" required />
                            <span asp-validation-for="Titre" class="text-danger small"></span>
                            <div class="invalid-feedback">Veuillez saisir un titre.</div>
                        </div>

                        <!-- Champ Description -->
                        <div class="mb-3">
                            <label for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <div class="invalid-feedback">Veuillez saisir une description.</div>
                        </div>

                        <!-- Champ Prix -->
                        <div class="mb-3">
                            <label for="Price" class="form-label fw-bold">Prix</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                            <div class="invalid-feedback">Veuillez saisir un prix valide.</div>
                        </div>

                        <!-- Champ Catégorie -->
                        <div class="mb-3">
                            <label for="CategorieId" class="form-label fw-bold">Catégorie</label>
                            <select asp-for="CategorieId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Intitule"))" required>
                                <option value="">-- Sélectionnez une catégorie --</option>
                            </select>
                            <span asp-validation-for="CategorieId" class="text-danger small"></span>
                            <div class="invalid-feedback">Veuillez sélectionner une catégorie.</div>
                        </div>

                        <!-- Champ Image -->
                        <div class="mb-4">
                            <label for="ImageFile" class="form-label fw-bold">Télécharger une image</label>
                            <input asp-for="ImageFile" type="file" class="form-control" required />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                            <div class="invalid-feedback">Veuillez télécharger une image.</div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Script pour la validation côté client -->
@section Scripts {
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}