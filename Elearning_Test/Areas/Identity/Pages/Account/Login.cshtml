@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Connexion - @ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <link rel="icon" href="~/AdminAssets/img/kaiadmin/favicon.ico" type="image/x-icon" />

    <!-- Fonts and icons -->
    <script src="~/AdminAssets/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                ],
                urls: ["@Url.Content("~/AdminAssets/css/fonts.min.css")"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/AdminAssets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/AdminAssets/css/plugins.min.css" />
    <link rel="stylesheet" href="~/AdminAssets/css/kaiadmin.min.css" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="~/AdminAssets/css/demo.css" />
</head>
<body>
    <div class="main-panellog">
        <div class="container mt-5 d-flex justify-content-center">
            <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
                <!-- Header -->
                <div class="card-header text-center" style="background-color: #1A2035; color: white; border-top-left-radius: 20px; border-top-right-radius: 20px;">
                    <h3 class="mb-0 fw-bold">Here you go again buddy</h3>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <form id="account" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label fw-bold">Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="••••••••" required />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-light btn-border">
                                <i class="fa fa-home"></i> Home
                            </a>
                            <button type="submit" class="btn btn-primary" style="border-radius: 20px;">
                                <i class="fa fa-sign-in-alt"></i> Log in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Validation Script -->
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
